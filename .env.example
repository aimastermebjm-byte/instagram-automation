# System Configuration
DEBUG=false
POSTS_PER_TOPIC=3
DEFAULT_TIME_RANGE=oneDay
ENABLE_SCHEDULING=true

# Rate Limiting
REQUEST_DELAY=2
MAX_RETRIES=3